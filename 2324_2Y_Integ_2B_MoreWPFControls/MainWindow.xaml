        <Button Name="bob" Content="Button" HorizontalAlignment="Left" Margin="157,254,0,0" VerticalAlignment="Top" Background="#FFBD1111" Click="bob_Click"/>
        <Label x:Name="lbSliderDisplay" Content="Label" HorizontalAlignment="Left" Margin="97,199,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
